<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Csdetails2"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg1forcsdetails"
        android:layout_marginTop="20dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_evName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EV Station Name"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/colorPrimary"></TextView>

        <TextView
            android:id="@+id/tv_ownerName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner Name"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorAccent"></TextView>

        <Spinner
            android:id="@+id/spnr_connectorType2"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_textfield"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="10dp"
            style="@style/myStyleForSpinner"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/callToOwner"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_call"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"></ImageView>
            <ImageView
                android:id="@+id/locateOwner"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_map"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"></ImageView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg2forcsdetails"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"></LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CSDetails"
    android:background="@color/white">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cs_bg">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="135sp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/icon_cs"
                    android:contentDescription="TODO"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="\t\t\t\t\t\tSet up your\nCharging Station"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginTop="210dp"
                    android:layout_marginStart="65dp">
                </TextView>
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="500dp">

                <EditText
                    android:id="@+id/et_csname"
                    android:layout_width="300dp"
                    android:layout_height="43dp"
                    android:background="@drawable/ic_textfield"
                    android:drawableLeft="@drawable/ic_ev_station"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:hint="  CS Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.089"></EditText>

                <EditText
                    android:id="@+id/et_latitude"
                    android:layout_width="300dp"
                    android:layout_height="43dp"
                    android:background="@drawable/ic_textfield"
                    android:drawableLeft="@drawable/ic_latitude"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:hint="  Latitude"
                    android:inputType="numberDecimal"
                    android:paddingLeft="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.253"></EditText>

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="263dp"
                    android:layout_height="34dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingRight="10dp"
                    android:text="Use Current Location"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/okbtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.764" />

                <Button
                    android:id="@+id/okbtn"
                    android:layout_width="162dp"
                    android:layout_height="54dp"
                    android:background="@drawable/lgnbtn"
                    android:fontFamily="@font/montserrat"
                    android:text="Ok"

                    android:textColor="@android:color/background_light"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.762"></Button>

                <EditText
                    android:id="@+id/et_longitude"
                    android:layout_width="300dp"
                    android:layout_height="43dp"
                    android:background="@drawable/ic_textfield"
                    android:drawableLeft="@drawable/ic_longitude"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:hint="  Longitude"
                    android:inputType="numberDecimal"
                    android:paddingLeft="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/okbtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.557"></EditText>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


</ScrollView>